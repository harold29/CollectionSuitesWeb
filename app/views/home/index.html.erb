          if (window.innerWidth <= 767) {
            document.querySelector('.img-gallery[data-rela="'+arrayImgs[asociate]+'"]').style.display = 'none';
          }

        }else{
          this.dataset.status = 'inactive';
        }
        return false;
      });
    }

    for (var i = 0; i < document.getElementsByClassName('close-image').length; i++) {
      document.getElementsByClassName('close-image')[i].addEventListener('click', function(){
        var asociate = this.dataset.rel;
        document.querySelector('.img-gallery[data-rela="'+asociate+'"]').dataset.status = 'inactive';
