<%= stylesheet_link_tag "jquery.fullPage.css" %>
<style media="screen">
  h1{
    color: #af8400;
    font-family: 'Vidaloka', 'Times New Roman', serif !important;
    text-align: center;
  }
  h2{
    color: rgb(183, 155, 70);
    font-family: 'Vidaloka', 'Times New Roman', serif !important;
    text-align: center;
    margin: 0px;
  }
  h2.last{
    margin-bottom: 10vh;
    line-height: 1;
  }
  a, p{
    color: #f3f3f3;
    text-align: center;
    font-family: Solomon-Light;
    font-weight: bold;
    text-decoration: none;
    line-height: 2;
    letter-spacing: 3px;
  }
  .img-box::after{
    content: '';
    width: 0%;
    height: 0%;
  }
  .img-box{
    border: 2px solid #af8400;
    cursor: pointer;
  }
  .btn-style{
    background: none;
    border: 1px solid #af8400;
    padding: 10px 25px;
    color: #f3f3f3;
    font-size: 1.2em;
    cursor: pointer;
  }
  .btn-style:hover{
    background: #af8400;
  }



  @media (min-width: 768px) {
    .row-content{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    h1{
      font-size: calc(8vw);
    }
    h2{
      font-size: calc(5vw);
    }
    p{
      font-size: 18px;
    }
    img{
      max-width: calc(60vw);
      flex-grow: 1;
    }
    .no-margin-top{
      margin-top: 0px;
    }
    .pic-logo{
      width: calc(40vw);
      max-width: 620px;
    }
    .pic-logo-1{
      width: calc(15vw);
      max-width: 620px;
    }
    .wrap-groups{
      display: flex;
      flex-direction: row;
    }
    .wrap-groups-dispair{
      display: flex;
      flex-direction: row;
      justify-content: space-around;
    }
    .group{
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-around;
    }
    .group > img{
      width: 80%;
    }
    .wrap-groups-dispair img {
      max-height: 480px;
    }
    .group-dispair-full{
      flex-grow: 2;
      flex-shrink: 2;
    }
    .group-dispair-half{
      flex-grow: 1;
      flex-shrink: 1;
    }
  }
</style>
